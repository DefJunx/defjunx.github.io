---
import BaseLayoutComponent from "@components/BaseLayoutComponent.astro";
import Maintenance from "@components/Maintenance.astro";
const showMaintenance = import.meta.env.PUBLIC_ENABLE_MAINTENANCE === "true";

interface Props {
  title?: string;
}

const { title = "Daniele Cencig" } = Astro.props;
---

{showMaintenance && <Maintenance />}

{!showMaintenance && <BaseLayoutComponent title={title} />}
